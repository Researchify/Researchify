{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "globals": {
        "localStorage": true
    },
    "extends": ["eslint:recommended", "airbnb", "prettier"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    
    "rules": {
        "max-len": "off",
        "no-underscore-dangle": "off",
        "camelcase": "off", 
        "consistent-return": "off",
        "no-plusplus": "off",
        "prefer-destructuring": "off",
        "no-shadow": "off",
        "no-await-in-loop": "off",
        "no-use-before-define": ["error", {"functions":  false, "classes":  false}],
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": "off",
        "react/jsx-props-no-spreading": "off",
        "react/prop-types": "off", // should refactor later
        "react/no-array-index-key": "off", // should refactor later
        "no-nested-ternary": "off", // should refactor later
        "jsx-a11y/click-events-have-key-events": "off", // low-prio refactor
        "jsx-a11y/no-static-element-interactions": "off", // low-prio refactor
        "jsx-a11y/no-noninteractive-element-interactions": "off", // low-prio refactor
        "react/destructuring-assignment": "off", // should refactor later
        "radix": "off", // low-prio refactor
        "no-param-reassign": "off", // should refactor later
        "no-return-assign": "off", // should refactor later
        "spaced-comment": "off",
        "arrow-body-style": "off" // should refactor later
    }
}
