{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "browser": true
    },
    "extends": ["eslint:recommended", "airbnb"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "import/no-mutable-exports": "off",
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": "off",
        "max-len": "off",
        "react/prop-types": "off", // should refactor later
        "no-underscore-dangle": "off",
        "react/no-array-index-key": "off" // should refactor later
    }
}
