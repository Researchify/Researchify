{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:jest/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "max-len": "off",
    "no-underscore-dangle": "off",
    "camelcase": "off",
    // From this rule onward, it is all temporary and pending refactor
    "consistent-return": "off",
    "no-plusplus": "off",
    "prefer-destructuring": "off",
    "no-shadow": "off",
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": false
      }
    ],
    "newline-per-chained-call": "off"
  }
}
